<!-- Third Container (Grid) -->
<div class="container-fluid bg-3 text-center">
  <h3 class="margin">My Flats</h3><br>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="flat-card col-sm-4 justify-content-center">
        <% if flat.photo.attached? %>
          <div class="flat-card-img-top" style="background-image:url('<%= cl_image_path flat.photo.key, crop: :fit%>')" alt="Image"> </div>
        <% end %>
        <div class="flat-card-body">
          <h5 class="flat-card-title" style="margin-top:10px"><strong>Flat name: </strong><%= flat.name %></h5>
          <p class="flat-card-text"><strong>Flat description: </strong><%= flat.description %></p>
          <p class="flat-card-text"><strong>Flat address: </strong><%= flat.address %></p>
        </div>
        <div class="flat-form">
        <% if flat.reservation%>
          <%= simple_form_for flat.reservation do |f| %>
            <%= f.input :check_in, disabled: true%>
            <%= f.input :check_out, disabled: true%>
            <%= f.input :payment_status, disabled: true%>
            <%= f.input :confirmation_status, collection: [:confirmed, :rejected] %>
            <%= f.submit %>
        </div>
        <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

