<div class="container" style="width: 65%">
  <h3 class="my_flats-title">My flats</h3>
  <ul style="list-style: none">
    <% @flats.each do |flat| %>
      <li>

        <div class="card-product">
        <% if flat.photo.attached? %>
          <img src="<%= cl_image_path flat.photo.key, crop: :fit %>" />
        <% end %>
          <div class="card-product-infos">
            <h2><%= flat.name %></h2>
            <p><%= flat.description %></p>
          </div>
        </div>

        <h5 class="my_flats-title">Reservations</h5>
        <ul class="list-group">
        <% if flat.reservation %>
          <div class="container py-5">
            <div class="row">
              <div class="col-12 col-md-6 offset-lg-3">
                <div class="bg-white rounded p-3 shadow">
                  <%= simple_form_for flat.reservation do |f| %>
                    <%= f.input :check_in, disabled: true%>
                    <%= f.input :check_out, disabled: true%>
                    <%= f.input :payment_status, disabled: true%>
                    <%= f.input :confirmation_status, collection: [:confirm, :reject] %>
                    <%= f.submit %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
